<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vehicleDetails"
    android:background="@drawable/details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VehicleDetails">


    <ImageView
        android:id="@+id/backArrowVehicle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="44dp"
        android:contentDescription="Back Arrow"
        android:src="@drawable/back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vehicleDetailsMainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Vehicle Details"
        android:textColor="#F8F0F0"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/outerLinearLayoutVehicle"
        android:layout_width="348dp"
        android:layout_height="128dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="@+id/vehicleDetailsMainTitle"
        app:layout_constraintStart_toStartOf="@+id/vehicleDetailsMainTitle"
        app:layout_constraintTop_toBottomOf="@+id/vehicleDetailsMainTitle">

        <TextView
            android:id="@+id/textVehicleDetails"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/istok_web"
            android:paddingTop="10dp"
            android:text="Upload Registration \n Certificate of the Vehicle"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ButtonUploadVehicleDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/orange_round"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/img_1" />

            <TextView
                android:id="@+id/uploadImageVehicleDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:text="Upload Photo"
                android:textAlignment="center"
                android:textColor="#D96928" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/submitButtonVehicleDoc"
        android:layout_width="366dp"
        android:layout_height="56dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/orange_button_background"
        android:backgroundTint="@null"
        android:elevation="4dp"
        android:fontFamily="@font/istok_web_bold"
        android:gravity="center"
        android:padding="12dp"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textColorLink="#FF5722"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/outerLinearLayoutVehicle"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toStartOf="@+id/outerLinearLayoutVehicle"
        app:layout_constraintTop_toBottomOf="@+id/outerLinearLayoutVehicle" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/linear_layout_aadhar"
    tools:context=".Aadhar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:background="#F89427"
            android:orientation="horizontal">

            <Button
                android:id="@+id/aadharBackButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@android:color/transparent"
                android:text="do"
                android:drawableLeft="@drawable/baseline_arrow_back_black"
                />

            <TextView

                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:background="#F89427"
                android:fontFamily="@font/archivo_bold"

                android:gravity="center"
                android:text="Aadhar Card Details"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="351dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:fontFamily="@font/archivo_medium"
            android:text="Upload focused photo of your \nAadhar Card for faster verification"
            android:textAlignment="center"
            android:textColor="#101010"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/border"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fontFamily="@font/archivo_medium"
                android:paddingTop="10dp"
                android:text="Front side photo of your Aadhar\n card with your clear Name \n and Photo"
                android:textAlignment="center"
                android:textColor="#101010" />

            <Button
                android:id="@+id/front_aadhar_upload_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:drawableLeft="@drawable/camera"
                android:backgroundTint="@color/orange"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Upload Image" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/border"
            android:layout_marginRight="30dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:fontFamily="@font/archivo_medium"
                android:paddingTop="10dp"
                android:text="Back side photo of your Aadhar\n card with your clear Name \n and Address"
                android:textAlignment="center"
                android:textColor="#101010" />

            <Button
                android:id="@+id/back_aadhar_upload_btn"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textAlignment="center"
                android:drawableLeft="@drawable/camera"
                android:layout_gravity="center"
                android:backgroundTint="@color/orange"
                android:text="Upload Image" />
        </LinearLayout>
        <Button
            android:id="@+id/submit_aadhar_btn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="150dp"
            android:textSize="20sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/orange"
            android:paddingTop="16dp"
            android:text="Submit"
            android:paddingHorizontal="8dp"
            android:paddingBottom="12dp"
            android:layout_gravity="center"/>

    </LinearLayout>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>
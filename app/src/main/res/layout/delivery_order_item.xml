<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <!-- Order Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="10dp">

        <!-- Order Number and Status in a Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Order Number -->
            <TextView
                android:id="@+id/orderNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order No. #1109"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:textStyle="normal"
                android:layout_weight="1"/> <!-- Added layout_weight to push the status text to the right -->

            <!-- Status -->
            <TextView
                android:id="@+id/orderStatus"
                android:gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Pickup Successful"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Order Value -->
        <TextView
            android:id="@+id/orderValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Value: â‚¹ x"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"/>

</LinearLayout>

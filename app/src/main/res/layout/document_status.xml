<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/LiniarLayoutDocstatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="#F89427"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_arrow_back_black"
            android:contentDescription="do"
            />

        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:background="#F89427"
            android:fontFamily="@font/archivo_bold"
            android:gravity="center"
            android:text="Document Status"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp" />


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:fontFamily="@font/archivo_medium"
                android:text="Personal Information \n \n Approved"
                android:textColor="#101010" />

            <ImageButton
                android:id="@+id/Upploadbutton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow"
                android:backgroundTint="#F6C691"
                android:padding="8dp"
                android:contentDescription="do"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:fontFamily="@font/archivo_medium"
                android:text="Personal Documents \n \n Verification Pending"
                android:textColor="#101010" />

            <ImageButton
                android:id="@+id/Upploadbutton1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow"
                android:backgroundTint="#F6C691"
                android:padding="8dp"
                android:contentDescription="do"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:fontFamily="@font/archivo_medium"
                android:text="Vehical Details \n \nApproved"
                android:textColor="#101010" />

            <ImageButton
                android:id="@+id/Upploadbutton3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow"
                android:backgroundTint="#F6C691"
                android:padding="8dp"
                android:contentDescription="do"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="25dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:fontFamily="@font/archivo_medium"
                android:text="Bank Account Details \n \nApproved"
                android:textColor="#101010"/>



            <ImageButton
                android:id="@+id/Upploadbutton4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/arrow"
                android:backgroundTint="#F6C691"
                android:padding="8dp"
                android:contentDescription="do"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>